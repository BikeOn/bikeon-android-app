<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cc.bikeon.app.ui.LocationFragment">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:background="@drawable/main_backgroud"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/bikeon_logo_text"
            android:id="@+id/imageView" />

        <EditText
            android:id="@+id/etxWhereYouGo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textfield_rounded"
            android:layout_margin="@dimen/default_margin"
            android:hint="Vai para onde?"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/etxWhereYouGo"
            android:layout_alignLeft="@+id/etxWhereYouGo"
            android:layout_alignStart="@+id/etxWhereYouGo">
            <TableRow>
                <TextView android:id="@+id/txtWeatherCondition"
                    android:layout_column="1"
                    android:layout_span="2"
                    android:textSize="40dp"
                    android:text="Sol"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/txtWeatherMin"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="v 25"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/default_margin"/>
                <TextView android:id="@+id/txtWeatherMax"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="^ 32"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/txtWeatherTemperature"
                    android:layout_column="1"
                    android:layout_span="2"
                    android:textSize="60dp"
                    android:text="30Ëš"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</FrameLayout>
